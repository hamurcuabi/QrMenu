@using QrMenu.MODEL
@model Urun
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ICollection<Kategori> kategoriList = ViewBag.KategoryList as ICollection<Kategori>;
}
<section class="content">
    <div class="container-fluid">
        @Html.Partial("_PartialMessage")
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Ürün Ekle</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form enctype="multipart/form-data" method="post" action="">
                <div class="card-body">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Ürün Adı</label>
                        <input type="text" required class="form-control" name="Ad" id="UrnAd">
                    </div>
                    <div class="form-group">
                        <label>Açıklama</label>
                        <textarea class="form-control"  rows="3" name="Aciklama"></textarea>
                    </div>
                    <div class="form-group">
                        <label>Kategori</label>
                        <select class="form-control select2" required style="width: 100%;" name="KategoriId">
                            <option selected="selected" disabled>Kategori Seçin</option>
                            @foreach (var item in kategoriList)
                            {
                                <option value="@item.KategoriId">@item.Ad</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="UrnFiyat">Ürün Fiyatı</label>
                        <input type="text" class="form-control" name="Fiyat" id="UrnFiyat">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputFile">Ürün Görseli</label>
                        <div class="input-group">
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" required name="images" id="UrnMedia">
                                <label class="custom-file-label" for="exampleInputFile">Görsel Seç</label>
                            </div>
                        </div>
                    </div>


                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div>

    </div>
</section>