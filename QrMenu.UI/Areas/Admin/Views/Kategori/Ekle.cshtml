@using QrMenu.MODEL
@model Kategori
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
    <section class="content">
        <div class="container-fluid">
            @Html.Partial("_PartialMessage")
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Kategori Ekle</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form enctype="multipart/form-data" method="post" action="">
                    <div class="card-body">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Kategori Adı</label>
                            <input type="text" class="form-control" name="Ad" id="KatAd" >
                        </div>
                        <div class="form-group">
                            <label>Açıklama</label>
                            <textarea class="form-control" rows="3" name="Aciklama"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputFile">Kategori Görseli</label>
                            <div class="input-group">
                                <div class="custom-file">
                                    <input type="file" class="custom-file-input" name="images" id="KatMedia">
                                    <label class="custom-file-label" for="exampleInputFile">Görsel Seç</label>
                                </div>
                            </div>
                        </div>
                        
                    </div>
                    <!-- /.card-body -->

                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </div>
                </form>
            </div>

            </div>
    </section>