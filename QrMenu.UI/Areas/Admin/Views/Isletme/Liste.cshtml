@using QrMenu.MODEL
@model ICollection<IsletmeAyar>
@{
    ViewBag.Title = "Liste";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

}
    
<div class="container-fluid">
    @Html.Partial("_PartialMessage")
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Ayar Listesi</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Ad</th>
                        <th>Adres</th>
                        <th>Tel</th>
                        <th>Email</th>
                        <th>Facebook</th>
                        <th>Instagram</th>
                        <th>Twitter</th>
                        <th>Logo</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Ad</td>
                            <td>@item.Adres</td>
                            <td>@item.TelNo</td>
                            <td>@item.Email</td>
                            <td>@item.Facebook</td>
                            <td>@item.Instagram</td>
                            <td>@item.Twitter</td>
                            <td><img src="@item.LogoUri" alt="@item.Ad" width="50" /></td>
                            <td>
                                

                                    <input type="checkbox" name="my-checkbox" onchange="Toggle(@item.IsletmeAyarId)" id="@item.IsletmeAyarId" checked data-bootstrap-switch data-off-color="danger" data-on-color="success">
                                    
                            </td>

                        </tr>
                    }


                </tbody>
                <tfoot>
                    <tr>
                        <th>Ad</th>
                        <th>Adres</th>
                        <th>Tel</th>
                        <th>Email</th>
                        <th>Facebook</th>
                        <th>Instagram</th>
                        <th>Twitter</th>
                        <th>Logo</th>
                        <th></th>
                    </tr>
                </tfoot>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</div>


